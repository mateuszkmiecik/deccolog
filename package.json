{
  "name": "deccolog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "bunx --bun vite",
    "dev:server": "bun run server.ts --watch",
    "build": "tsc -b && bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "docker:build": "docker build -t deccolog-app .",
    "docker:run": "docker run -p 3002:3002 deccolog-app",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-preact": "^0.552.0",
    "nanoid": "^5.1.6",
    "preact": "^10.27.2",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^24.6.0",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "hono": "^4.6.12",
    "@hono/node-server": "^1.14.5",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.7"
  }
}
