{
  "name": "deccolog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "bunx --bun vite",
    "dev:server": "onchange -i -k 'api/**/*' -- go run ./api",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "migration:generate": "bunx drizzle-kit generate --dialect postgresql --schema db/schema.ts",
    "migration:run": "bun run bin/migrate.ts",
    "drizzle:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "inquirer": "^13.0.1",
    "lucide-preact": "^0.552.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "preact": "^10.27.2",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.6.0",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.7",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.7"
  }
}
